<resources>
    <!-- Base application theme. -->
    <style name="Theme.WordDefinition" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <!-- Secondary brand color.-->
        <item name="colorSecondary">@color/night_secondary</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">?attr/colorSecondary</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:navigationBarColor">?android:attr/statusBarColor</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonStyle</item>
    </style>
</resources>